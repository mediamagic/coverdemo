#finalResult(ng-show="glob.showFinalResult")
	canvas#finalImage(width="851", height="315")
	#profilePicWrapper
		img#profilePic(alt="", border="0", width="160", height="160")
#editor	
	#boundingImageBox(style="top:0px; left:0px; width:851px; height:315px;outline:solid blue 1px;")
		img#userImage(ng-src="{{userImage}}", alt="", border="0", width="{{currentTemplate.mask.width}}", height="{{currentTemplate.mask.height}}", style="-webkit-transform:rotate({{rotateStep}}deg);top:{{currentTemplate.mask.posY}}px; left:{{currentTemplate.mask.posX}}px; border:solid green 1px;")
	img#maskImage(ng-src="{{currentTemplate.url}}",alt="",border="0")	
	#boundingDragBox(style="top:0px; left:0px; width:851px; height:315px;outline:solid black 1px;")
		#dragBoxUserImage(style="-webkit-transform:rotate({{rotateStep}}deg); top:{{currentTemplate.mask.posY}}px; left:{{currentTemplate.mask.posX}}px; width:{{currentTemplate.mask.width}}px; height:{{currentTemplate.mask.height}}px; border:dashed white 2px;")	
	#editorControls
		#rotate
			#left(ng-click="rotate('left')") LEFT
			#right(ng-click="rotate('right')") RIGHT
		#zoom
			#in(ng-click="zoom('in')") +
			#out(ng-click="zoom('out')") -	
#uploadControls
	form(ng-controller="UploadCtrl")
		input#uploadPC(type="file", onchange="angular.element(this).scope().handlePcUpload(this)") Upload From PC
	#facebookControls(ng-controller="FbCtrl")
		#popupFacebook
			.fbImages(ng-repeat="picture in pictures")
				img(ng-src="{{picture.picture}}", ng-click="selectPicture($index)", alt="", border="0")
		button(ng-click="handleFbLogin(retrievePictures)") Upload From Facebook Album
	#webcamControls(ng-controller="webcamCtrl")
		#popupWebcam
			#videoWrapper
				#viewPort
				video#vid(autoplay,ng-show="showWebcam", width="150", height="150")
			canvas#canvas(width="150",height="150",style="display:none;")
			button(ng-click="snapshot()") Take Picture
		button(ng-click="toggleVideo()") Snap From Webcam
#templatesGallery(style="margin-top:200px;")
	.galleryItem(ng-repeat="template in templates")
		img(ng-src="{{template.thumb}}", ng-click="selectTemplate($index)", alt="",border="0")
#popupForm(ng-controller="formCtrl")
	form
		input(type="submit", ng-click="handleSave()", value="Save")
